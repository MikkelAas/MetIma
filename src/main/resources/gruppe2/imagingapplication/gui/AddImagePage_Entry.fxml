<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" minHeight="150.0" prefHeight="100.0" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <VBox prefHeight="200.0" HBox.hgrow="NEVER">
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="20.0" VBox.vgrow="NEVER">
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image Name:" styleClass="text" />
      <TextField fx:id="txtEntryName" prefWidth="300.0" styleClass="text-field"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="20.0" VBox.vgrow="NEVER">
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image Tags:" HBox.hgrow="ALWAYS" styleClass="text">
        <HBox.margin>
          <Insets />
        </HBox.margin>
      </Text>
      <TextField fx:id="txtEntryTags" prefWidth="300.0" HBox.hgrow="NEVER" styleClass="text-field">
        <HBox.margin>
          <Insets />
        </HBox.margin>
      </TextField>
    </HBox>
  </VBox>
  <HBox alignment="CENTER" prefWidth="200.0" HBox.hgrow="NEVER">
    <ImageView fx:id="imgEntryPreview" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
  </HBox>
  <Button fx:id="btnEntryRemove" mnemonicParsing="false" text="Remove Image" HBox.hgrow="ALWAYS" styleClass="addImage-button-addImage"/>
</HBox>
